import pyttsx3
import os
pyttsx3.speak("welcome to secured network: ")
pyttsx3.speak("please fill the details step wise by pressing 1 2 3 and 4")


pyttsx3.speak("to proceed press 1 ")
while True:

   print("enter the value" , end=' ' )
   p= input()
   print(p)

   if int(p)== 1:
     pyttsx3.speak("Enter your Name")
     name=input()
     print("enter the secured code to proceed, code:1233")
     code=input()
     pyttsx3.speak('Username recorded ,press 2 to proceed')
    
    

   elif int(p)==2:
     pyttsx3.speak("Enter your mail id")
     mail=input()
     print("enter the secured code to proceed, code:2233")
     code=input()
     pyttsx3.speak("mail id recorded ,press 3 to proceed")

   elif int(p)==3:
     pyttsx3.speak("Enter your password")
     password=input()
     
     
     pyttsx3.speak("saving your Response. Thank you")
     os.system("notepad")
     pyttsx3.speak("press 4 if you want a  copy of your response")
   elif int(p)==4:
     print("your name is :",name)
     print("your mail id is :",mail)
     print("your password is :",password)
   else:
     pyttsx3.speak("invalid input.try again")


pyttsx3.speak("thank you for your time and respose")  
